{
  "name": "mosaic-grid-widget",
  "version": "1.0.6",
  "description": "A framework-agnostic web component for creating beautiful, animated mosaic-style content grids with lazy loading and custom previews",
  "author": "",
  "license": "MIT",
  "private": false,
  "main": "./dist/mosaic-grid.umd.js",
  "module": "./dist/mosaic-grid.mjs",
  "types": "./src/types.ts",
  "exports": {
    ".": {
      "import": "./dist/mosaic-grid.mjs",
      "require": "./dist/mosaic-grid.umd.js",
      "types": "./src/types.ts"
    },
    "./types": {
      "import": "./src/types.ts",
      "types": "./src/types.ts"
    }
  },
  "scripts": {
    "build": "vite build",
    "build:demo": "vite build --config vite.demo.config.ts",
    "dev": "vite demo",
    "clean": "rimraf dist",
    "clean:docs": "rimraf docs",
    "prepare": "npm run build",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "vitest"
  },
  "keywords": [
    "web-components",
    "image-grid",
    "mosaic",
    "typescript",
    "modal-viewer",
    "responsive-grid",
    "framework-agnostic"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/kai4avaya/mosaic-grid.git"
  },
  "bugs": {
    "url": "https://github.com/kai4avaya/mosaic-grid/issues"
  },
  "homepage": "https://github.com/kai4avaya/mosaic-grid#readme",
  "files": [
    "dist",
    "src/types.ts",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "typescript": "^5.3.3",
    "rimraf": "^5.0.5",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "jsdom": "^24.0.0"
  },
  "peerDependencies": {},
  "dependencies": {}
}
